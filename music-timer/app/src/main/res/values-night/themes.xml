<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Musictimer" parent="Theme.AppCompat.DayNight">

        <!-- 메뉴바 컬러-->
        <item name="colorPrimary">@color/user_grey</item>

        <item name="colorPrimaryVariant">@color/white</item>

        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/user_grey</item>

        <!-- 상태 바 아이콘 색상 true: 회색 false: 흰색-->
        <item name="android:windowLightStatusBar">false</item>

        <!-- 화면 배경 기본 컬러 -->
        <item name="android:windowBackground">@color/user_grey</item>

        <!-- 강조 색상 -->
        <item name="colorAccent">@color/main_color</item>

    </style>
</resources>